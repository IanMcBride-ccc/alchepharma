<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/ingred_button_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="300px"
        android:layout_marginRight="200px"
        android:text="Empty L" />

    <Button
        android:id="@+id/ingred_button_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="300px"
        android:layout_marginLeft="200px"
        android:text="Empty R" />

    <Button
        android:id="@+id/stir_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150px"
        android:text="@string/stir_button"/>

    <Button
        android:id="@+id/follower_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="5px"
        android:text="@string/back_button" />

</FrameLayout>